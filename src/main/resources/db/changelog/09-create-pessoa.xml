<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="09" author="JoaoVFG">

		<createTable tableName="Pessoa"
			remarks="Tabela que cadastro das pessoas que usam o sistema">

			<column name="id" type="int">
				<constraints primaryKey="true" unique="true"
					nullable="false" />
			</column>
			
			<column name="tipo" type="int">
				<constraints nullable="false" />
			</column>
			
			<column name="nome" type="varchar(120)">
				<constraints nullable="false" />
			</column>
			
			<column name="razaoSoial" type="varchar(120)">
				<constraints nullable="false" />
			</column>
			
			<column name="CPF" type="varchar(11)">
				<constraints unique="true" nullable="false" />
			</column>
			
			<column name="CNPJ" type="varchar(11)">
				<constraints unique="true" nullable="false" />
			</column>
			
			<column name="dataNascimento" type="varchar(10)">
				<constraints nullable="false" />
			</column>
			
			<column name="sexo" type="varchar(1)">
			</column>




		</createTable>

	</changeSet>

</databaseChangeLog>